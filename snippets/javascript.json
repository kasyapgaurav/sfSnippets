{
    "function": {
        "prefix": "sf-function",
        "body": [
            "${1:functionName}: function (component, event, helper) {"
            "	$0",
            "}"
        ],
        "description": ""
    },
    "action": {
        "prefix": "sf-action",
        "body": [
            "var action = component.get(\"c.${1:apexMethod}\");",
            "action.setParams({",
            "	${2:param} : ${3:value}",
            "});",
            "action.setCallback(this, \\$A.getCallback(function(response) {",
            "	var response = response.getReturnValue();",
            "	console.log(response);",
            "}));",
            "\\$A.enqueueAction(action);"
        ],
        "description": ""
    },
    "toast": {
        "prefix": "sf-toast",
        "body": [
            "showToast: function(type, title, message) {",
            "	var toastEvent = \\$A.get(\"e.force:showToast\");",
            "	toastEvent.setParams({",
            "		\"title\": ${1:title},",
            "		\"type\": ${2:type},",
            "		\"message\": ${3:message}",
            "	});",
            "	toastEvent.fire();",
            "}"
        ],
        "description": ""
    },
    "today": {
        "prefix": "sf-date-dd/mm/yyy",
        "body": [
            "\\$A.localizationService.formatDate(new Date(), \"DD/MM/YYYY\");"
        ],
        "description": ""
    },
    "refreshView": {
        "prefix": "sf-refresh-view",
        "body": [
            "$A.get(\"e.force:closeQuickAction\").fire();"
        ],
        "description": ""
    }
}